            </Grid>

            <Grid Grid.Column="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                -->
            <!--<CheckBox Grid.Row="0" Content="Kobiety" Style="{StaticResource CheckBox}"/>
                <CheckBox Grid.Row="1" Content="Mężczyźni" Style="{StaticResource CheckBox}"/>-->
            <!--
            </Grid>-->


        </Grid>

        <Grid Grid.Row="4">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="Kategorie" Style="{StaticResource LabelStandardowyI}"/>
                <TextBox Grid.Row="1" Text="Wyszukaj kategorie..." Style="{StaticResource TextBoxStandardowy}" />
                <CheckBox Grid.Row="2" Content="Kategorie" Style="{StaticResource CheckBoxII}"/>
                <CheckBox Grid.Row="3" Content="Pokaż rekordy nieprzypisane do kategorii" Style="{StaticResource CheckBoxII}"/>

            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>



                <Grid Grid.Row="0">
                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding List}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding  IdFaktury}"/>
                            <DataGridTextColumn Header="Nr Faktury" Binding="{Binding NrFaktury}"/>
                            <DataGridTextColumn Header="Data wystawienia" Binding="{Binding DataWystawienia}"/>
                            <DataGridTextColumn Header="Termin płatności" Binding="{Binding TerminPlatnosci}"/>
                            <DataGridTextColumn Header="Nazwa produktu" Binding="{Binding NazwaProduktu}"/>
                            <DataGridTextColumn Header="Ilość" Binding="{Binding Ilosc}"/>
                            <DataGridTextColumn Header="Rabat" Binding="{Binding  Rabat}"/>
                            <DataGridTextColumn Header="Cena" Binding="{Binding Cena}"/>
                            <DataGridTextColumn Header="Marża" Binding="{Binding Marza}"/>
                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>

            </Grid>

        </Grid>



    </Grid>
</UserControl>

